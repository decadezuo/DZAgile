<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="layout_fill_fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout_wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_0_wrap">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_0_fill">
        <item name="android:layout_width">0.0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout_fill_0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
    </style>

    <style name="layout_fill_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="prompt_button" parent="@style/layout_0_wrap">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="custom_listview" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/agile_selector_list</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textScaleX">1.3</item>
    </style>

    <style name="main_top_view" parent="@style/layout_fill_wrap">
        <item name="android:id">@id/main_top_view</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="main_bottom_view" parent="@style/layout_fill_wrap">
        <item name="android:id">@id/main_bottom_view</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    
    <style name="main_center_view" parent="@style/layout_fill_fill">
        <item name="android:id">@id/main_center_view</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@id/main_top_view</item>
        <item name="android:layout_above">@id/main_bottom_view</item>
    </style>

</resources>